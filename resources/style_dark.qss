/* ==================== DESIGN TOKENS ==================== */
/*
Primary Colors:
  --primary: #0d7377        Deep teal (trust, security)
  --primary-light: #14919b  Lighter teal
  --primary-dark: #084c4e   Darker teal

Accent Colors:
  --accent: #32e0c4         Bright cyan
  --success: #00d084        Green
  --warning: #ffa726        Orange
  --danger: #f44336         Red
  --info: #2196f3           Blue

Neutral Colors:
  --bg-primary: #0a0e12     True black (main background)
  --bg-secondary: #161b22   Very dark gray (cards, elevated surfaces)
  --bg-tertiary: #1f2937    Dark gray (hover states)
  --bg-input: #0d1117       Input backgrounds

Text Colors:
  --text-primary: #f0f6fc   Almost white
  --text-secondary: #8b949e Light gray
  --text-disabled: #6e7681  Medium gray
  --text-hint: #6e7681      Hints

Border Colors:
  --border-subtle: #30363d  Subtle borders
  --border-medium: #484f58  Medium borders
  --border-strong: #6e7681  Strong borders

Elevation/Shadows:
  --shadow-sm: 0 1px 3px rgba(0,0,0,0.4)
  --shadow-md: 0 4px 6px rgba(0,0,0,0.5)
  --shadow-lg: 0 10px 20px rgba(0,0,0,0.6)
  --shadow-xl: 0 20px 40px rgba(0,0,0,0.7)

Spacing (8px grid):
  xs: 4px, sm: 8px, md: 16px, lg: 24px, xl: 32px, xxl: 48px
*/

/* ==================== GLOBAL STYLES ==================== */
* {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 10pt;
    outline: none;
}

QMainWindow, QDialog {
    background-color: #0a0e12;
    color: #f0f6fc;
}

QWidget {
    background-color: transparent;
    color: #f0f6fc;
    selection-background-color: #0d7377;
    selection-color: #ffffff;
}

/* ==================== SCROLLBARS ==================== */
QScrollBar:vertical {
    background: #161b22;
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #484f58;
    min-height: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background: #6e7681;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
    background: none;
}

QScrollBar:horizontal {
    background: #161b22;
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #484f58;
    min-width: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background: #6e7681;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
    background: none;
}

/* ==================== BUTTONS ==================== */
QPushButton {
    background-color: #0d7377;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: 500;
    font-size: 10pt;
    min-height: 36px;
}

QPushButton:hover {
    background-color: #14919b;
}

QPushButton:pressed {
    background-color: #084c4e;
}

QPushButton:disabled {
    background-color: #1f2937;
    color: #6e7681;
}

QPushButton:focus {
    border: 2px solid #32e0c4;
}

/* Button Variants */
QPushButton#primaryButton {
    background-color: #0d7377;
}

QPushButton#primaryButton:hover {
    background-color: #14919b;
}

QPushButton#secondaryButton {
    background-color: #1f2937;
    color: #8b949e;
}

QPushButton#secondaryButton:hover {
    background-color: #30363d;
    color: #f0f6fc;
}

QPushButton#dangerButton {
    background-color: #f44336;
}

QPushButton#dangerButton:hover {
    background-color: #e53935;
}

QPushButton#warningButton {
    background-color: #ffa726;
    color: #0a0e12;
}

QPushButton#warningButton:hover {
    background-color: #ff9800;
}

QPushButton#successButton {
    background-color: #00d084;
    color: #0a0e12;
}

QPushButton#successButton:hover {
    background-color: #00b86e;
}

QPushButton#ghostButton {
    background-color: transparent;
    border: 1px solid #484f58;
    color: #8b949e;
}

QPushButton#ghostButton:hover {
    background-color: #161b22;
    border-color: #6e7681;
    color: #f0f6fc;
}

/* Icon-only buttons */
QPushButton[iconOnly="true"] {
    min-width: 36px;
    max-width: 36px;
    padding: 8px;
}

/* ==================== TEXT INPUTS ==================== */
QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    padding: 10px 12px;
    color: #f0f6fc;
    font-size: 10pt;
    min-height: 40px;
}

QLineEdit:hover, QTextEdit:hover, QPlainTextEdit:hover {
    border-color: #484f58;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus,
QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid #0d7377;
    background-color: #0a0e12;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #161b22;
    color: #6e7681;
    border-color: #30363d;
}

QLineEdit[error="true"], QTextEdit[error="true"] {
    border: 2px solid #f44336;
}

QLineEdit::placeholder, QTextEdit::placeholder, QPlainTextEdit::placeholder {
    color: #6e7681;
}

/* ==================== COMBO BOX / DROPDOWNS ==================== */
QComboBox {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    padding: 10px 12px;
    color: #f0f6fc;
    min-height: 40px;
    font-size: 10pt;
}

QComboBox:hover {
    border-color: #484f58;
}

QComboBox:focus {
    border: 2px solid #0d7377;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px;
    border-left: 1px solid #30363d;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
}

QComboBox::down-arrow {
    image: none;
    border-style: solid;
    border-width: 5px 4px 0 4px;
    border-color: #8b949e transparent transparent transparent;
    margin-right: 8px;
}

QComboBox::down-arrow:hover {
    border-color: #f0f6fc transparent transparent transparent;
}

QComboBox QAbstractItemView {
    background-color: #0a0e12;
    border: 1px solid #30363d;
    border-radius: 6px;
    padding: 4px;
    selection-background-color: #0d7377;
    selection-color: #ffffff;
    outline: none;
}

QComboBox QAbstractItemView::item {
    min-height: 36px;
    padding: 8px 12px;
    border-radius: 4px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #1f2937;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #0d7377;
    color: #ffffff;
}

/* ==================== TABLES ==================== */
QTableWidget, QTableView {
    background-color: #0a0e12;
    alternate-background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 8px;
    gridline-color: #30363d;
    selection-background-color: #0d7377;
    selection-color: #ffffff;
    font-size: 10pt;
    color: #f0f6fc;
}

QTableWidget::item, QTableView::item {
    padding: 12px 8px;
    border: none;
}

QTableWidget::item:hover, QTableView::item:hover {
    background-color: #1f2937;
}

QTableWidget::item:selected, QTableView::item:selected {
    background-color: #0d7377;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #161b22;
    color: #f0f6fc;
    padding: 12px 8px;
    border: none;
    border-right: 1px solid #30363d;
    border-bottom: 2px solid #0d7377;
    font-weight: 600;
    font-size: 9pt;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

QHeaderView::section:hover {
    background-color: #30363d;
    color: #f0f6fc;
}

QHeaderView::section:first {
    border-top-left-radius: 8px;
}

QHeaderView::section:last {
    border-top-right-radius: 8px;
    border-right: none;
}

/* ==================== TAB WIDGET ==================== */
QTabWidget::pane {
    border: 1px solid #30363d;
    border-radius: 8px;
    background-color: #0a0e12;
    top: -1px;
}

QTabBar::tab {
    background-color: transparent;
    color: #8b949e;
    border: none;
    border-bottom: 2px solid transparent;
    padding: 12px 24px;
    margin-right: 4px;
    font-size: 10pt;
    font-weight: 500;
}

QTabBar::tab:hover {
    color: #f0f6fc;
    background-color: #0d1117;
}

QTabBar::tab:selected {
    color: #32e0c4;
    border-bottom: 2px solid #32e0c4;
    background-color: #0a0e12;
}

/* ==================== GROUP BOX ==================== */
QGroupBox {
    background-color: #0a0e12;
    border: 1px solid #30363d;
    border-radius: 8px;
    margin-top: 16px;
    padding-top: 24px;
    font-weight: 600;
    font-size: 11pt;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 16px;
    padding: 0 8px;
    color: #f0f6fc;
    background-color: #0a0e12;
}

/* ==================== CHECKBOXES & RADIO BUTTONS ==================== */
QCheckBox, QRadioButton {
    color: #f0f6fc;
    spacing: 8px;
    font-size: 10pt;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #484f58;
    background-color: #0d1117;
}

QCheckBox::indicator {
    border-radius: 4px;
}

QRadioButton::indicator {
    border-radius: 10px;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #6e7681;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #0d7377;
    border-color: #0d7377;
}

QCheckBox::indicator:checked {
    image: url(data:image/svg+xml;base64,);
}

QRadioButton::indicator:checked {
    background-color: #0d7377;
    border: 6px solid #0d1117;
}

QCheckBox:disabled, QRadioButton:disabled {
    color: #6e7681;
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    background-color: #161b22;
    border-color: #30363d;
}

/* ==================== PROGRESS BAR ==================== */
QProgressBar {
    border: none;
    border-radius: 4px;
    background-color: #1f2937;
    text-align: center;
    color: #f0f6fc;
    font-size: 9pt;
    font-weight: 500;
    height: 8px;
}

QProgressBar::chunk {
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #0d7377, stop:1 #32e0c4);
    border-radius: 4px;
}

QProgressBar[type="success"]::chunk {
    background-color: #00d084;
}

QProgressBar[type="warning"]::chunk {
    background-color: #ffa726;
}

QProgressBar[type="danger"]::chunk {
    background-color: #f44336;
}

/* ==================== MENU BAR ==================== */
QMenuBar {
    background-color: #0a0e12;
    color: #f0f6fc;
    border-bottom: 1px solid #30363d;
    padding: 4px 8px;
    font-size: 10pt;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 16px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #161b22;
}

QMenuBar::item:pressed {
    background-color: #30363d;
}

/* ==================== MENUS ==================== */
QMenu {
    background-color: #0a0e12;
    border: 1px solid #30363d;
    border-radius: 8px;
    padding: 8px;
}

QMenu::item {
    background-color: transparent;
    color: #f0f6fc;
    padding: 10px 32px 10px 16px;
    border-radius: 4px;
    font-size: 10pt;
}

QMenu::item:selected {
    background-color: #0d7377;
    color: #ffffff;
}

QMenu::separator {
    height: 1px;
    background-color: #30363d;
    margin: 8px 16px;
}

QMenu::icon {
    padding-left: 8px;
}

/* ==================== TOOL BAR ==================== */
QToolBar {
    background-color: #0a0e12;
    border: none;
    border-bottom: 1px solid #30363d;
    spacing: 8px;
    padding: 8px;
}

QToolButton {
    background-color: transparent;
    border: none;
    border-radius: 6px;
    padding: 8px 12px;
    color: #8b949e;
    font-size: 10pt;
}

QToolButton:hover {
    background-color: #161b22;
    color: #f0f6fc;
}

QToolButton:pressed {
    background-color: #30363d;
}

QToolButton:checked {
    background-color: #0d7377;
    color: #ffffff;
}

/* ==================== STATUS BAR ==================== */
QStatusBar {
    background-color: #0a0e12;
    color: #8b949e;
    border-top: 1px solid #30363d;
    font-size: 9pt;
    padding: 4px 16px;
}

QStatusBar::item {
    border: none;
}

QStatusBar QLabel {
    color: #8b949e;
    padding: 0 8px;
}

/* ==================== LABELS ==================== */
QLabel {
    color: #f0f6fc;
    background-color: transparent;
    font-size: 10pt;
}

QLabel#titleLabel {
    font-size: 20pt;
    font-weight: 700;
    color: #f0f6fc;
    letter-spacing: -0.5px;
}

QLabel#subtitleLabel {
    font-size: 12pt;
    font-weight: 500;
    color: #8b949e;
}

QLabel#sectionLabel {
    font-size: 14pt;
    font-weight: 600;
    color: #f0f6fc;
}

QLabel#hintLabel {
    font-size: 9pt;
    color: #6e7681;
    font-style: italic;
}

QLabel#errorLabel {
    color: #f44336;
    font-weight: 500;
}

QLabel#successLabel {
    color: #00d084;
    font-weight: 500;
}

QLabel#warningLabel {
    color: #ffa726;
    font-weight: 500;
}

QLabel#infoLabel {
    color: #2196f3;
    font-weight: 500;
}

/* ==================== CARDS ==================== */
QFrame#card {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 12px;
    padding: 20px;
}

QFrame#cardHover {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 12px;
    padding: 20px;
}

QFrame#cardHover:hover {
    border-color: #0d7377;
    border-width: 2px;
}

QFrame#cardElevated {
    background-color: #0d1117;
    border: 2px solid #30363d;
    border-radius: 12px;
    padding: 24px;
}

/* KPI Cards */
QFrame#kpiCard {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-left: 4px solid #0d7377;
    border-radius: 12px;
    padding: 24px;
    min-height: 120px;
}

QFrame#kpiCard:hover {
    border-left-width: 6px;
}

QFrame#kpiCard[type="success"] {
    border-left-color: #00d084;
}

QFrame#kpiCard[type="warning"] {
    border-left-color: #ffa726;
}

QFrame#kpiCard[type="danger"] {
    border-left-color: #f44336;
}

QFrame#kpiCard[type="info"] {
    border-left-color: #2196f3;
}

/* ==================== SIDEBAR ==================== */
QFrame#sidebar {
    background-color: #010409;
    border-right: 1px solid #30363d;
}

QFrame#sidebar QLabel {
    color: #8b949e;
}

QFrame#sidebar QPushButton {
    background-color: transparent;
    color: #8b949e;
    border: none;
    border-radius: 8px;
    padding: 12px 16px;
    text-align: left;
    font-size: 11pt;
    font-weight: 500;
}

QFrame#sidebar QPushButton:hover {
    background-color: #161b22;
    color: #f0f6fc;
}

QFrame#sidebar QPushButton:checked {
    background-color: #0d7377;
    color: #ffffff;
    font-weight: 600;
    border-left: 4px solid #32e0c4;
}

/* ==================== LOGIN WINDOW ==================== */
QWidget#loginContainer {
    background-color: #0d1117;
    border: 2px solid #30363d;
    border-radius: 16px;
}

/* ==================== DATE EDIT ==================== */
QDateEdit {
    background-color: #0d1117;
    border: 1px solid #30363d;
    border-radius: 6px;
    padding: 10px 12px;
    color: #f0f6fc;
    min-height: 40px;
}

QDateEdit:hover {
    border-color: #484f58;
}

QDateEdit:focus {
    border: 2px solid #0d7377;
}

QDateEdit::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px;
    border-left: 1px solid #30363d;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
}

QDateEdit::down-arrow {
    image: none;
    border-style: solid;
    border-width: 5px 4px 0 4px;
    border-color: #8b949e transparent transparent transparent;
    margin-right: 8px;
}

QCalendarWidget {
    background-color: #0a0e12;
    border: 1px solid #30363d;
    border-radius: 8px;
}

QCalendarWidget QWidget {
    color: #f0f6fc;
}

QCalendarWidget QToolButton {
    background-color: transparent;
    color: #f0f6fc;
    border-radius: 4px;
    padding: 4px;
    min-width: 30px;
    min-height: 30px;
}

QCalendarWidget QToolButton:hover {
    background-color: #161b22;
}

QCalendarWidget QToolButton::menu-indicator {
    image: none;
}

QCalendarWidget QMenu {
    background-color: #0a0e12;
}

QCalendarWidget QSpinBox {
    background-color: #0d1117;
    color: #f0f6fc;
    border: 1px solid #30363d;
    border-radius: 4px;
    padding: 4px;
    selection-background-color: #0d7377;
    selection-color: #ffffff;
}

QCalendarWidget QSpinBox::up-button,
QCalendarWidget QSpinBox::down-button {
    background-color: #161b22;
    border: none;
    width: 16px;
}

QCalendarWidget QSpinBox::up-button:hover,
QCalendarWidget QSpinBox::down-button:hover {
    background-color: #30363d;
}

QCalendarWidget QAbstractItemView {
    background-color: #0d1117;
    selection-background-color: #0d7377;
    selection-color: #ffffff;
    color: #f0f6fc;
    gridline-color: #30363d;
    outline: none;
}

QCalendarWidget QAbstractItemView:enabled {
    color: #f0f6fc;
}

QCalendarWidget QAbstractItemView:disabled {
    color: #6e7681;
}

/* Calendar date cells */
QCalendarWidget QAbstractItemView::item {
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 10pt;
    min-width: 32px;
    min-height: 26px;
    padding: 4px;
    color: #f0f6fc;
}

QCalendarWidget QAbstractItemView::item:selected {
    background-color: #0d7377;
    color: #ffffff;
}

QCalendarWidget QAbstractItemView::item:hover {
    background-color: #1f2937;
}

/* Calendar header (days of week) */
QCalendarWidget QWidget#qt_calendar_navigationbar {
    background-color: #161b22;
}

/* Calendar table */
QCalendarWidget QTableView {
    background-color: #0d1117;
    selection-background-color: #0d7377;
}

/* Header row with day names */
QCalendarWidget QWidget {
    alternate-background-color: #161b22;
}

/* ==================== SPLITTERS ==================== */
QSplitter::handle {
    background-color: #30363d;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #0d7377;
}

/* ==================== LIST WIDGET ==================== */
QListWidget {
    background-color: #0a0e12;
    border: 1px solid #30363d;
    border-radius: 8px;
    outline: none;
    padding: 4px;
}

QListWidget::item {
    padding: 12px 16px;
    border-radius: 6px;
    margin: 2px 0;
}

QListWidget::item:hover {
    background-color: #1f2937;
}

QListWidget::item:selected {
    background-color: #0d7377;
    color: #ffffff;
}

/* ==================== TREE WIDGET ==================== */
QTreeWidget {
    background-color: #0a0e12;
    border: 1px solid #30363d;
    border-radius: 8px;
    outline: none;
}

QTreeWidget::item {
    padding: 8px 4px;
}

QTreeWidget::item:hover {
    background-color: #1f2937;
}

QTreeWidget::item:selected {
    background-color: #0d7377;
    color: #ffffff;
}

QTreeWidget::branch {
    background-color: transparent;
}

/* ==================== DIALOG BUTTONS ==================== */
QDialogButtonBox {
    button-layout: 2;
}

QDialogButtonBox QPushButton {
    min-width: 100px;
}

/* ==================== TOOLTIPS ==================== */
QToolTip {
    background-color: #161b22;
    color: #f0f6fc;
    border: 1px solid #484f58;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 9pt;
}

/* ==================== SCROLL AREA ==================== */
QScrollArea {
    background-color: transparent;
    border: none;
}

QScrollArea > QWidget > QWidget {
    background-color: transparent;
}

/* ==================== RESPONSIVE UTILITIES ==================== */
.text-primary { color: #f0f6fc; }
.text-secondary { color: #8b949e; }
.text-disabled { color: #6e7681; }
.text-success { color: #00d084; }
.text-warning { color: #ffa726; }
.text-danger { color: #f44336; }
.text-info { color: #2196f3; }

.bg-primary { background-color: #0a0e12; }
.bg-secondary { background-color: #0d1117; }
.bg-tertiary { background-color: #161b22; }

/* ==================== ANIMATIONS (via property) ==================== */
/* Note: QSS doesn't support animations directly, but Qt can animate properties */
QPushButton[animated="true"], QFrame[animated="true"] {
    /* Properties that can be animated via QPropertyAnimation */
}

/* ==================== END OF STYLESHEET ==================== */
